<div class="row">
  <div class="col-md-12 banner text-center">
    <h1><span class="text-blue">Discover The Rich and Famous Near You</span></h1>
  </div>
</div>

  <div class="row">
    <div class="col-md-6">
      <%= form_tag search_path, method: :get do %>

      <%= text_field_tag :search, params[:search], placeholder: "Search Wealthy Homeowners in a City Near You", class: "form-control", id: "autolocation" %>
    </div>

    <div class="col-md-2">
      <%= submit_tag "Search", class: "btn btn-form btn-block" %>
    </div>
  </div>

<% end %>

