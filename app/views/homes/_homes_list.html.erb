<% homes.each do |home| %>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading preview">

        <%= link_to image_tag(home.cover_photo(:medium)), home %>

      </div>
      
      <div class="panel-body">
        <div class="container">
          <!--<span class="col-md-12" style="font-size: 2rem;"><b>$<= home.price %></b><div style="float: right;" id="star_<= home.id %>"></div></span>-->
          <span class="col-md-12" style="font-size: 2rem;"><b>$<%= home.price %></b></span>
          <div><span class="col-md-12"><%= link_to home.address, home %></span></div>
          <span class="col-md-12">Beds <%= home.bedrooms %><span  style="padding-left: 5px;">Baths <%= home.bathrooms %></span>
          <!--<span class="fa fa-user" style="padding-left: 5px;"></span> < pluralize(home.guest_reviews.count, "Review") %></span>-->
        </div>
      </div>
      
    </div>
  </div>
  
  <script>
    $('#star_<%= home.id %>').raty({
      path: '/assets',
      readOnly: true,
      score: <%= home.average_rating %>
    });
  </script>
<% end %>