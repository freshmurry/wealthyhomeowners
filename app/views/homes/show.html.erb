<!-- Image -->
<div class="row">
  <div class="col-md-12">
    <%= image_tag @home.cover_photo(nil), width: "100%" %>
  </div>
</div>
<br/>

<div class="row">
  
  <!-- LEFT PANEL -->
  <div class="col-md-8">
    <!-- Listing Name -->
    <div class="container">
      <div class="row">
        <div class="col-md-9">
        <h2><%= @home.listing_name %></h2>
            <%= @home.address %>
        </div>&nbsp;

        <div class="col-md-3 text-center">
          <%= image_tag avatar_url(@home.user), class: "img-circle avatar-large" %><br/>
          <%= link_to user_path(@home.user) do %>
          <%= @home.user.fullname %>
          <% end %>
          <div>
            <span id="average_rating"></span>
          </div>
          <div class="center">
            <% if current_user && current_user != @user %>
              <%= link_to "Message Host", conversations_path(sender_id: current_user.id, recipient_id: @home.user.id), method: :post, class: "btn btn-default" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>  
    <hr/>
      
    <!-- Home Info -->
    <div class="container">
      <div class="row text-babu">
        <div class="row text-center row-space-1">
          <div class="col-md-3">
            <i class="fas fa-building fa-2x"></i>
          </div>
          <div class="col-md-3">
             <i class="fa fa-map-marker fa-2x"></i>
          </div>
          <div class="col-md-3">
            <i class="fa fa-users fa-2x"></i>
          </div>
          <div class="col-md-3">
            <i class="fas fa-toilet fa-2x"></i>
          </div>
        </div>
    
        <div class="row text-center">
          <div class="col-md-3"><%= @home.event_type %></div>
          <div class="col-md-3"><%= @home.home_type %></div>
          <div class="col-md-3"><%= @home.accommodate %></div>
          <div class="col-md-3"><%= @home.rest_room %></div>
        </div>
      </div>
    </div>  
    <hr/>
  
    <!-- About -->
    <div class="container">
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-heading">About This Home</div>
          <div class="panel-body">
            <div class="container">
              <p><%= @home.summary %></p>
            </div>  
          </div>
        </div>
      </div>
    </div>  
    <br/>
  
    <!-- FEATURES --> 
    <div class="container">
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-heading">Features</div>
          <div class="panel-body">
            <div class="container">
              <div class="col-md-12">
                <div class="row">
                  <div class="col-xs-4 col-sm-4 col-md-4">
                    <ul class="features">
                      <li class="<%= 'text-line-through' if !@home.is_kitchen %>">Kitchen</li>
                      <li class="<%= 'text-line-through' if !@home.is_tables %>">Tables</li>
                      <li class="<%= 'text-line-through' if !@home.is_chairs %>">Chairs</li>
                      <li class="<%= 'text-line-through' if !@home.is_microphone %>">Microphone</li>
                      <li class="<%= 'text-line-through' if !@home.is_custodial %>">Custodial Services</li>
                      <li class="<%= 'text-line-through' if !@home.is_accessible %>">Accessible</li>
                    </ul>
                  </div>
                  <div class="col-xs-4 col-sm-4 col-md-4">
                    <ul class="features">
                      <li class="<%= 'text-line-through' if !@home.is_projector %>">Projector</li>
                      <li class="<%= 'text-line-through' if !@home.is_bar %>">Bar</li>
                      <li class="<%= 'text-line-through' if !@home.is_self_parking %>">Self-Parking</li>
                      <li class="<%= 'text-line-through' if !@home.is_valet_parking %>">Valet Parking</li>
                      <li class="<%= 'text-line-through' if !@home.is_tablecloths %>">Tablecloths</li>
                      <li class="<%= 'text-line-through' if !@home.is_wheelchair %>">Wheelchair</li>
                    </ul>
                  </div>
                  <div class="col-xs-4 col-sm-4 col-md-4">
                    <ul class="features">
                      <li class="<%= 'text-line-through' if !@home.is_garage_parking %>">Garage Parking</li>
                      <li class="<%= 'text-line-through' if !@home.is_air %>">A/C</li>
                      <li class="<%= 'text-line-through' if !@home.is_heating %>">Heating</li>
                      <li class="<%= 'text-line-through' if !@home.is_wifi %>">Wifi</li>
                      <li class="<%= 'text-line-through' if !@home.is_stage %>">Stage</li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <hr/>
  
    <!-- CAROUSEL -->
    <div class="container">
      <div class="row">  
        <% if @photos.length > 0 %>
          <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
              <% @photos.each do |photo| %>
                <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
              <% end %>
            </ol>
    
            <!--Wrapper for slides -->
            <div class="carousel-inner">
              <% @photos.each do |photo| %>
                <div class="item <%= 'active' if photo.id == @photos[0].id %>">
                  <%= image_tag photo.image.url() %>
                </div>
              <% end %>
            </div>
    
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        <% end %>
      </div>
    </div>  
    <br/>
  
    <!-- REVIEWS -->
    <div class="container">
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-heading">Guest Reviews (<%= @guest_reviews.count %>) <span id="average_rating"></span></div>
          <div class="container">
            <div class="panel-body">
              <div><%= render "reviews/guest_list" %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
      
    <!-- GOOGLE MAP -->
    <div class="container">
      <div class="row">
        <div id="map" style="width: 100%; height: 400px"></div>
        <!-- <script src="https://maps.googleapis.com/maps/api/js"></script> -->
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBwN_tpAAKnHhy14HzNqK-XeuarVJhNHg8"></script>
        <script>
         function initialize() {
            var location = {lat: <%= @home.latitude %>, lng: <%= @home.longitude %>};
            var map = new google.maps.Map(document.getElementById('map'), {
              center: location,
              zoom: 12
            });
    
            var marker = new google.maps.Marker({
              position: location,
              map: map
            });
    
            var infoWindow = new google.maps.InfoWindow({
              content: '<div id="content"><%= image_tag @home.cover_photo(:medium) %></div>'
            });
    
            infoWindow.open(map, marker);
          }
    
          google.maps.event.addDomListener(window, 'load', initialize);
        </script>
    
      </div>
    </div>  
    <hr/>

    <!-- NEAR BY HOMES  -->
    <div class="panel panel-default">
      <div class="panel-heading">Nearby Homes</div>
        <% for home in @home.nearbys(10) %>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading preview">
            <%= image_tag home.cover_photo(:medium) %>
          </div>
              
          <div class="panel-body">
            <div class="container">
              <%= link_to home.listing_name, home %><br/>
              (<%= home.distance.round(2) %> miles away)
            </div>
          </div>
        </div>  
      </div>
      <% end %>  
    </div>  
  </div>

  <!-- RIGHT PANEL -->
  <div class="col-md-4">
    <!-- RESERVATION FORM -->
    <%= render 'reservations/form' %>
  </div>
</div>

<script>
  $('#average_rating').raty({
    path: '/assets',
    readOnly: true,
    score: <%= @home.average_rating %>
  });
</script>