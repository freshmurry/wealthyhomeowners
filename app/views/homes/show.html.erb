<!-- Image -->
<div class="row">
  <div class="col-md-12">
    <%= image_tag @home.cover_photo(nil), width: "100%" %>
  </div>
</div>
<br/>

<div class="row">
  
  <!-- LEFT PANEL -->
  <div class="col-md-8">
    <h2><%= @home.address %></h2>
    
    <!-- Listing Name -->
    <div class="container">
      <div class="row text-center row-space-1">
        <div class="col-md-3">
          <i class="fas fa-home"></i>
          <%= @home.home_type %>
        </div>
          
        <div class="col-md-3">
          <i class="fa fa-bed"></i>
          <%= @home.bedrooms %> Bedrooms
        </div>
          
        <div class="col-md-3">
          <i class="fas fa-toilet"></i>
          <%= @home.bathrooms %> Bathrooms
        </div>
      </div>
    </div>
      
    <hr/>
  
    <!-- About -->
    <div class="container">
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-heading">Description</div>
          <div class="panel-body">
            <div class="container">
              <p><%= @home.summary %></p>
            </div>  
          </div>
        </div>
      </div>
    </div>  
    
    <br/>
    <hr/>
  
    <!-- CAROUSEL -->
    <div class="container">
      <div class="row">  
        <% if @photos.length > 0 %>
          <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
              <% @photos.each do |photo| %>
                <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
              <% end %>
            </ol>
    
            <!--Wrapper for slides -->
            <div class="carousel-inner">
              <% @photos.each do |photo| %>
                <div class="item <%= 'active' if photo.id == @photos[0].id %>">
                  <%= image_tag photo.image.url() %>
                </div>
              <% end %>
            </div>
    
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        <% end %>
      </div>
    </div>  
    <br/>
  
    <!-- REVIEWS -->
    <div class="container">
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-heading">Guest Reviews (<%= @guest_reviews.count %>) <span id="average_rating"></span></div>
          <div class="container">
            <div class="panel-body">
              <div><%= render "reviews/guest_list" %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
      
    <!-- GOOGLE MAP -->
    <div class="container">
      <div class="row">
        <div id="map" style="width: 100%; height: 400px"></div>
        <!-- <script src="https://maps.googleapis.com/maps/api/js"></script> -->
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBwN_tpAAKnHhy14HzNqK-XeuarVJhNHg8"></script>
        <script>
         function initialize() {
            var location = {lat: <%= @home.latitude %>, lng: <%= @home.longitude %>};
            var map = new google.maps.Map(document.getElementById('map'), {
              center: location,
              zoom: 12
            });
    
            var marker = new google.maps.Marker({
              position: location,
              map: map
            });
    
            var infoWindow = new google.maps.InfoWindow({
              content: '<div id="content"><%= image_tag @home.cover_photo(:medium) %></div>'
            });
    
            infoWindow.open(map, marker);
          }
    
          google.maps.event.addDomListener(window, 'load', initialize);
        </script>
    
      </div>
    </div>  
    <hr/>

    <!-- NEAR BY HOMES  -->
    <div class="panel panel-default">
      <div class="panel-heading">Nearby Homes</div>
        <% for home in @home.nearbys(10) %>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading preview">
            <%= image_tag home.cover_photo(:medium) %>
          </div>
              
          <div class="panel-body">
            <div class="container">
              <%= link_to home.address, home %><br/>
              (<%= home.distance.round(2) %> miles away)
            </div>
          </div>
        </div>  
      </div>
      <% end %>  
    </div>  
  </div>

  <!-- RIGHT PANEL -->
  <div class="col-md-4">
    <!-- RESERVATION FORM -->
    <%= render 'reservations/form' %>
  </div>
</div>

<script>
  $('#average_rating').raty({
    path: '/assets',
    readOnly: true,
    score: <%= @home.average_rating %>
  });
</script>