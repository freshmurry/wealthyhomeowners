<div class="row">
  <div class="col-md-3">
    <%= render 'home_menu' %>
  </div>
  
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Description
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @home do |f| %>

            <div class="row">
              <div class="container">  
                <div class="form-group">
                  <label>Owners Occupation</label>
                  <%= f.text_field :occupation, placeholder: "What do the owners do for a living?", class: "form-control", required: true %>
                </div>
              </div>  
            </div>

            <div class="row">
              <div class="container">
                <div class="form-group">
                  <label>Summary</label>
                  <%= f.text_area :summary, rows: 5, placeholder: "Description", class: "form-control", required: true %>
                </div>
              </div>  
            </div>

            <div class="text-center">
              <%= f.submit "Save", class: "btn btn-normal" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>