
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Photos
      </div>
      
      <div class="container">  
        <div class="panel-body">
          <div class="container">
            <div class="row">
              <div class="col-md-offset-3 col-md-6">
                
                <!-- PHOTOS UPLOAD GOES HERE -->
                <%= form_for @home, url: home_photos_path(@home), method: 'post', html: {multipart: true} do |f| %>
                  <div class="container">
                    <div class="row">
                      <div class="form-group">
                        <span class="btn btn-default btn-file text-babu">
                          <i class="fas fa-cloud-upload-alt" aria-hidden="true"></i> Select Photos
                          <%= file_field_tag "images[]", type: :file, multiple: true %>
                        </span>
                      </div>
                    </div>  
                  </div>
  
                  <div class="text-center">
                    <%= f.submit "Add Photos", class: "btn btn-form" %>
                  </div>
  
                <% end %>
              </div>
            </div>
  
            <div id="photos"><%= render 'photos/photos_list' %></div>
          </div>
        </div>
      </div>
      
    </div>
  </div>