<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Listings", homes_path, class: "sidebar-link active" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Listings
      </div>
      <div class="panel-body">
        <div class="container">
          <% @homes.each do |home| %>
            <div class="container-fluid">
              <div class="row">
                <div class="container-fluid">
                  <div class="col-md-2">
                    <%= image_tag home.cover_photo(:thumb) %>
                  </div>
                  <div class="col-md-8">
                    <h5><%= home.listing_name %></h5>
                  </div>
                  <div class="col-md-2">
                    <%= link_to "Update", edit_home_path(home), class: "btn btn-form" %>
                    <!--< link_to homes_path(home.id), remote: true, method: :delete, data: {confirm: "Are you sure?"} do %>-->
                    <!--<i class="fas fa-trash-alt fa-lg" aria-hidden="true"></i>-->
                  <!--< end %>-->
                  </div>
                </div>  
              </div>  
            </div>
            <hr/>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>