<div class="row">
  <div class="col-md-3">
    <%= render 'home_menu' %>
  </div>
    
    <div class="col-md-9">
      <div class="panel panel-default">
  
        <div class="panel-heading">
          Features
        </div>
  
          <div class="panel-body">
            <div class="container">
              <%= form_for @home do |f| %>
    
              <div class="row form-group">
                <div class="container">
                  <div class="col-md-4">
                    <%= f.check_box :is_tables %> Tables
                  </div>
                  <div class="col-md-4">
                    <%= f.check_box :is_kitchen %> Kitchen
                  </div>
                  <div class="col-md-4">
                    <%= f.check_box :is_chairs %> Chairs
                  </div>
                  <div class="col-md-4">
                    <%= f.check_box :is_wheelchair %> Wheelchair
                  </div>
                  <div class="col-md-4">
                    <%= f.check_box :is_microphone %> Microphone
                  </div>
                  <div class="col-md-4">
                    <%= f.check_box :is_projector %> Projector
                  </div>
                  <div class="col-md-4">
                    <%= f.check_box :is_bar %> Bar
                  </div>
                  <div class="col-md-4">
                    <%= f.check_box :is_tablecloths %> Tablecloths
                  </div>
                  <div class="col-md-4">
                    <%= f.check_box :is_self_parking %> Self-Parking
                  </div>
                  <div class="col-md-4">
                    <%= f.check_box :is_valet_parking %> Valet Parking
                  </div>
                  <div class="col-md-4">
                    <%= f.check_box :is_garage_parking %> Garage Parking
                  </div>
                  <div class="col-md-4">
                    <%= f.check_box :is_custodial %> Custodial Services
                  </div>
                  <div class="col-md-4">
                    <%= f.check_box :is_accessible %> Accessible
                  </div>
                  <div class="col-md-4">
                    <%= f.check_box :is_air %> Air Conditioning
                  </div>
                  <div class="col-md-4">
                    <%= f.check_box :is_heating %> Heating
                  </div>
                  <div class="col-md-4">
                    <%= f.check_box :is_wifi %> Wifi
                  </div>
                  <div class="col-md-4">
                    <%= f.check_box :is_stage %> Stage
                  </div>
                </div>  
              </div>
            
            <br/><br/>

          <div class="text-center">
            <%= f.submit "Save", class: "btn btn-form" %>
          </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>